# Application
APP_NAME="Mój Portfel 2026"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
SECRET_KEY="your-super-secret-key-change-this-in-production"

# API
API_HOST="0.0.0.0"
API_PORT=8000
API_PREFIX="/api/v1"
BACKEND_CORS_ORIGINS=["http://localhost","http://localhost:8000","http://localhost:80"]

# Database
POSTGRES_SERVER="postgres"
POSTGRES_PORT=5432
POSTGRES_USER="portfel"
POSTGRES_PASSWORD="portfel_password"
POSTGRES_DB="portfel_db"
DATABASE_URL="postgresql+asyncpg://portfel:portfel_password@postgres:5432/portfel_db"

# Redis
REDIS_HOST="redis"
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=""
REDIS_URL="redis://redis:6379/0"

# JWT
JWT_SECRET_KEY="jwt-super-secret-key-change-this"
