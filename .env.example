# Email (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@mojportfel.pl"
SMTP_FROM_NAME="Mój Portfel 2026"

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
